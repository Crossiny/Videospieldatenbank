<Window x:Class="Videospieldatenbank.Friends"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Videospieldatenbank"
        mc:Ignorable="d"
        Title="Freunde" Height="500" Width="250" MinHeight="500" MinWidth="250" MaxHeight="750" MaxWidth="375"
        WindowStartupLocation="CenterScreen" Visibility="Visible" WindowStyle="ToolWindow" Closed="Friends_OnClosed"
        Background="LightGray">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBox Name="TextBoxFriendName" Width="120" FontSize="20" Background="White" Margin="5" />
            <Button Name="ButtonAddFriend" Margin="5" Click="ButtonAddFriend_OnClick" FontSize="15">Hinzufügen</Button>
        </StackPanel>
        <ListBox Name="ListBoxFriends" Grid.Row="1" />
    </Grid>
</Window>