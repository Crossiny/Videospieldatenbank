<Page x:Class="Videospieldatenbank.Profil"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Videospieldatenbank"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:xcdg="http://schemas.xceed.com/wpf/xaml/datagrid"
      mc:Ignorable="d"
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Profil">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TabControl Name="TabControl" Grid.ColumnSpan="2">
            <TabItem Name="TabItemAccount" Header="Account">
                <Frame Name="FrameAccount" />
            </TabItem>
            <TabItem Name="TabItemLayout" Header="Layout">
                <Frame Name="FrameLayout" />
            </TabItem>
        </TabControl>
    </Grid>
</Page>